{
  "name": "muaddib",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Muaddib TypeScript runtime",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json && cp src/agent/tools/artifact-viewer.html dist/agent/tools/artifact-viewer.html",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint \"{src,tests-ts,scripts}/**/*.ts\"",
    "test": "vitest run --coverage",
    "cli:message": "node ./dist/cli/main.js",
    "start": "node ./dist/app/main.js",
    "start:irc": "node ./dist/app/main.js"
  },
  "dependencies": {
    "@fly/sprites": "^0.0.1",
    "@mariozechner/pi-agent-core": "^0.52.10",
    "@mariozechner/pi-ai": "^0.52.10",
    "@mariozechner/pi-coding-agent": "^0.52.10",
    "@sinclair/typebox": "^0.34.41",
    "@slack/bolt": "^4.5.0",
    "discord.js": "^14.22.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/node": "^24.3.0",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.34.0",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4"
  }
}
